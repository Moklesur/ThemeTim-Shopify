<!--------------- Slider ---------------->
<section class="main-slider">
  <!--------------- Carousel Slider ---------------->
  <div id="main-slider" class="carousel slide" data-ride="carousel">
    <!--------------- Wrapper for slides ---------------->
    <div class="carousel-inner" role="listbox">
      {% if settings.enable_slider_1 %}
      <div class="item active">
        <img src="{{ 'slider-1.jpg' | asset_url }}" class="img-responsive" />
        <div class="carousel-caption">
          <h2>{{ settings.slider_2}}</h2>
          <p>{{ settings.slider_3 }}</p>
        </div>
      </div>
      {% endif %}
      {% if settings.enable_slider_2 %}
      <div class="item">
        <img src="{{ 'slider-2.jpg' | asset_url }}" class="img-responsive" />
        <div class="carousel-caption">
          <h2>{{ settings.slider_5}}</h2>
          <p>{{ settings.slider_6 }}</p>
        </div>
      </div>
      {% endif %}
      {% if settings.enable_slider_3 %}
      <div class="item">
        <img src="{{ 'slider-3.jpg' | asset_url }}" class="img-responsive" />
        <div class="carousel-caption">
          <h2>{{ settings.slider_8}}</h2>
          <p>{{ settings.slider_9 }}</p>
        </div>
      </div>
      {% endif %}
      {% if settings.enable_slider_4 %}
      <div class="item">
        <img src="{{ 'slider-4.jpg' | asset_url }}" class="img-responsive" />
        <div class="carousel-caption">
          <h2>{{ settings.slider_11}}</h2>
          <p>{{ settings.slider_12 }}</p>
        </div>
      </div>
      {% endif %}
      {% if settings.enable_slider_5 %}
      <div class="item">
        <img src="{{ 'slider-5.jpg' | asset_url }}" class="img-responsive" />
        <div class="carousel-caption">
          <h2>{{ settings.slider_14}}</h2>
          <p>{{ settings.slider_15 }}</p>
        </div>
      </div>
      {% endif %}
      {% if settings.enable_slider_6 %}
      <div class="item">
        <img src="{{ 'slider-6.jpg' | asset_url }}" class="img-responsive" />
        <div class="carousel-caption">
          <h2>{{ settings.slider_17}}</h2>
          <p>{{ settings.slider_18 }}</p>
        </div>
      </div>
    </div>
    {% endif %}
    {% if settings.enable_controls %}
    <!--------------- Controls ---------------->
    <a class="left carousel-control" href="#main-slider" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#main-slider" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    {% endif %}
  </div>
</section>
{% if settings.enable_indicators %}
<!--------------- Indicators ---------------->
<script>
  var bootCarousel = $(".carousel");
  bootCarousel.append("<ol class='carousel-indicators'></ol>");
  var indicators = $(".carousel-indicators");
  bootCarousel.find(".carousel-inner").children(".item").each(function(index) {
    (index === 0) ?
            indicators.append("<li data-target='#main-slider' data-slide-to='" + index + "' class='active'></li>") :
            indicators.append("<li data-target='#main-slider' data-slide-to='" + index + "'></li>");
  });
</script>
{% endif %}